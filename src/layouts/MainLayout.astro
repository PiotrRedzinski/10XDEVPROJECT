---
import "../styles/global.css";
import { UserMenu } from "@/components/auth/UserMenu";
import { createSupabaseServer } from "@/lib/supabase.server";

interface Props {
  title?: string;
}

const { title = "Flashcards Generator" } = Astro.props;

// Get user session
const supabase = createSupabaseServer(Astro.cookies);
const { data: { session } } = await supabase.auth.getSession();
const userEmail = session?.user?.email;
---

<!DOCTYPE html>
<html lang="en" class="h-full">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
      body {
        font-family: 'Nunito Sans', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif;
      }
    </style>
  </head>
  <body class="h-full bg-white">
    <div class="min-h-full">
      <nav class="border-b border-gray-200 sticky top-0 z-10 bg-white">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="flex h-20 items-center justify-between">
            <div class="flex items-center">
              <a href="/" class="flex items-center">
                <span class="text-airbnb-rausch text-2xl font-bold tracking-tight">Flashcards</span>
              </a>
            </div>
            <div class="hidden md:block">
              <div class="flex items-center space-x-6">
                <a href="/" class="text-airbnb-hof hover:text-airbnb-rausch px-3 py-2 text-base font-medium rounded-full transition-colors duration-150">Home</a>
                <a href="/generate" class="text-airbnb-hof hover:text-airbnb-rausch px-3 py-2 text-base font-medium rounded-full transition-colors duration-150">Generate</a>
                <a href="/flashcards" class="text-airbnb-hof hover:text-airbnb-rausch px-3 py-2 text-base font-medium rounded-full transition-colors duration-150">My Flashcards</a>
                {userEmail ? (
                  <UserMenu client:load userEmail={userEmail} />
                ) : (
                  <a href="/login" class="bg-airbnb-rausch text-white px-4 py-2 rounded-full font-medium shadow-sm hover:bg-[#FF385C] transition-colors duration-150">Get Started</a>
                )}
              </div>
            </div>
          </div>
        </div>
      </nav>
      
      <main>
        <slot />
      </main>
      
      <footer class="bg-gray-50 border-t border-gray-200 mt-16">
        <div class="mx-auto max-w-7xl px-4 py-12 sm:px-6 lg:px-8">
          <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
            <div>
              <h3 class="text-airbnb-hof font-semibold mb-4">About</h3>
              <ul class="space-y-2">
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">How it works</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">About us</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Careers</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-airbnb-hof font-semibold mb-4">Learning</h3>
              <ul class="space-y-2">
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Study tips</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Resources</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Blog</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-airbnb-hof font-semibold mb-4">Support</h3>
              <ul class="space-y-2">
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Help Center</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Contact us</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Trust & Safety</a></li>
              </ul>
            </div>
            <div>
              <h3 class="text-airbnb-hof font-semibold mb-4">Legal</h3>
              <ul class="space-y-2">
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Terms of Service</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Privacy Policy</a></li>
                <li><a href="#" class="text-airbnb-foggy hover:text-airbnb-rausch text-sm">Cookie Preferences</a></li>
              </ul>
            </div>
          </div>
          <div class="border-t border-gray-200 mt-8 pt-8 text-center">
            <p class="text-sm text-airbnb-foggy">
              &copy; 2023 Flashcards App. All rights reserved.
            </p>
          </div>
        </div>
      </footer>
    </div>
  </body>
</html> 